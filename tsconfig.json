{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* create .d */
    "declaration": true, // 生成 .d.ts 文件
    "declarationDir": "dist", // 声明文件输出目录
    "emitDeclarationOnly": true, // 仅生成声明文件（可选）
    "outDir": "dist", // 输出目录（与 Vite 的 build.outDir 一致）
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx",
  ],
}